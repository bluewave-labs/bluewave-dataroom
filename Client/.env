# ==============================
# 🔐 Database Configuration
# ==============================
DATABASE_URL="your_database_url_here"
DIRECT_URL="your_direct_database_url_here"

# ==============================
# 🛠️ Supabase Configuration
# ==============================
SUPABASE_URL="your_supabase_project_url_here"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key_here"
SUPABASE_ANON_KEY="your_supabase_anon_key_here"
SUPABASE_JWT_SECRET="your_supabase_jwt_secret_here"

# ==============================
# ✉️ Email Service Configuration
# ==============================
RESEND_API_KEY="your_resend_api_key_here"

# ==============================
# 📦 Storage Provider
# ==============================
STORAGE_PROVIDER="supabase" # Available options: 'supabase', 'aws', etc.

# ==============================
# ✉️ Email Sending Toggle
# ==============================
SEND_EMAILS=false # Set to 'true' if emails should be sent in this environment.

# ==============================
# 🌎 Base URL for the Application
# ==============================
NEXT_PUBLIC_BASE_URL="http://your_base_url_here"

# ==============================
# 🔑 NextAuth Configuration
# ==============================
NEXTAUTH_SECRET="your_nextauth_secret_here"
NODE_ENV="development" # Can be 'development' or 'production'
NEXTAUTH_URL="http://your_nextauth_url_here"


